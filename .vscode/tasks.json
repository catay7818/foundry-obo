{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Azure Functions",
            "type": "shell",
            "command": "func start",
            "options": {
                "cwd": "${workspaceFolder}/src/CosmosDataFunction"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "azure-functions",
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Initializing function HTTP routes",
                    "endsPattern": "^.*Worker process started and initialized"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build Function App",
            "type": "shell",
            "command": "dotnet build",
            "options": {
                "cwd": "${workspaceFolder}/src/CosmosDataFunction"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Foundry OBO Agent",
            "type": "shell",
            "command": "${command:python.interpreterPath} main.py",
            "options": {
                "cwd": "${workspaceFolder}/src/agent-with-local-tools"
            },
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run FastAPI Server",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m uvicorn main_fastapi:app --reload",
            "options": {
                "cwd": "${workspaceFolder}/src/agent-with-local-tools"
            },
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
